---
import Base from '../../layouts/Base.astro';
import { useTranslations, getLocaleStaticPaths } from '../../i18n/utils';

export const getStaticPaths = getLocaleStaticPaths;

const t = useTranslations(Astro.currentLocale);
---

<Base title={t('support.title')}>
  <div class="max-w-3xl mx-auto px-6 py-16">
    <h1 class="text-3xl font-bold text-white mb-6">{t('support.heading')}</h1>

    <div class="space-y-8 text-gray-300">
      <section>
        <h2 class="text-xl font-semibold text-white mb-3">{t('support.contactHeading')}</h2>
        <p>
          {t('support.contactText')}
          {' '}
          <a href="mailto:support@gitsorted.app" class="text-blue-400 hover:text-blue-300 underline">support@gitsorted.app</a>.
        </p>
      </section>

      <section>
        <h2 class="text-xl font-semibold text-white mb-3">{t('support.faqHeading')}</h2>

        <div class="space-y-6">
          <div>
            <h3 class="font-medium text-white mb-1">{t('support.faqDataQ')}</h3>
            <p class="text-gray-400">{t('support.faqDataA')}</p>
          </div>

          <div>
            <h3 class="font-medium text-white mb-1">{t('support.faqDeleteQ')}</h3>
            <p class="text-gray-400">{t('support.faqDeleteA')}</p>
          </div>

          <div>
            <h3 class="font-medium text-white mb-1">{t('support.faqProvidersQ')}</h3>
            <p class="text-gray-400">{t('support.faqProvidersA')}</p>
          </div>

          <div>
            <h3 class="font-medium text-white mb-1">{t('support.faqRestoreQ')}</h3>
            <p class="text-gray-400">{t('support.faqRestoreA')}</p>
          </div>

          <div>
            <h3 class="font-medium text-white mb-1">{t('support.faqRefundQ')}</h3>
            <p class="text-gray-400" set:html={t('support.faqRefundA').replace('reportaproblem.apple.com', '<a href="https://reportaproblem.apple.com" class="text-blue-400 hover:text-blue-300 underline">reportaproblem.apple.com</a>')} />
          </div>
        </div>
      </section>
    </div>
  </div>
</Base>
